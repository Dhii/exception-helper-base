{
    "name": "dhii/exception-helper-base",
    "description": "Base functionality for exception helpers",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dhii Team",
            "email": "development@dhii.co"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^5.4 | ^7.0",
        "dhii/exception": "0.1-alpha1|0.1-alpha2"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "ptrofimov/xpmock": "^1.1",
        "dhii/php-cs-fixer-config": "^0.1",
        "codeclimate/php-test-reporter": "<=0.3.2",
        "dhii/stringable-interface": "^0.1"
    },
    "suggest": {
        "dhii/stringable-interface": "To be able to pass stringables instead of strings in some cases"
    },
    "autoload": {
        "psr-4": {
            "Dhii\\Exception\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dhii\\Exception\\UnitTest\\": "test/unit",
            "Dhii\\Exception\\FuncTest\\": "test/functional"
        }
    },
    "scripts": {
        "test": "phpunit",
        "csfix": "php-cs-fixer fix -vvv"
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.1.x-dev"
        }
    }
}
